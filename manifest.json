{
  "name": "Word of God",
  "version": "1.0",
  "manifest_version": 2,
  "chrome_url_overrides": {
    "newtab": "html/index.html"
  },
  "options_ui": {
    "page": "html/options.html",
    "open_in_tab": false
  },
  "browser_action": {
    "default_popup": "html/popup.html"
  },
  "permissions": [
    "storage"
  ],
  "web_accessible_resources": [
    "english.json", "malayalam.json"
  ]
}